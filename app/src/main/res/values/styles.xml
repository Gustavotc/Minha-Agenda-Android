<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base NoActionBar theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom button theme. -->
    <style name="custom_button" >
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_marginTop"> 20dp </item>
        <item name="android:background"> @drawable/custom_button </item>
        <item name="android:textColor"> @android:color/white </item>
        <item name="android:textSize"> 20sp </item>
        <item name="android:padding" > 16dp </item>
    </style>

    <!-- Custom login and signup EditText theme. -->
    <style name="custom_edit_text" >
        <item name="android:layout_width" > match_parent </item>
        <item name="android:layout_height" > wrap_content </item>
        <item name="android:layout_marginTop"> 20dp </item>
        <item name="android:textColor" > @android:color/white </item>
    </style>

    <!-- Custom contact info EditText theme. -->
    <style name="custom_edit_text_ContactInfo" >
        <item name="android:layout_width" > match_parent </item>
        <item name="android:layout_height" > wrap_content </item>
        <item name="android:layout_marginTop"> 20dp </item>
        <item name="android:padding"> 16dp </item>
        <item name="android:enabled"> false </item>
        <item name="android:textColor"> @android:color/black </item>
        <item name="android:background"> @drawable/custom_text_info </item>
    </style>

    <!-- Custom contact card for recyclerView theme. -->
    <style name="custom_contact_card">
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textSize"> 25sp </item>
        <item name="android:background"> @drawable/custom_card </item>
        <item name="android:padding"> 16dp </item>
        <item name="android:layout_margin"> 8dp </item>
        <item name="android:drawableRight"> @drawable/ic_person_24 </item>
        <item name="android:textColor"> @android:color/black </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:drawableTint"> @android:color/black </item>
        <item name="android:fontFamily"> @font/berkshire_swash </item>
    </style>

    <!-- Custom edit contact info EditText theme. -->
    <style name="custom_edit_info" >
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:background"> @drawable/custom_text_info </item>
        <item name="android:padding"> 16dp </item>
        <item name="android:layout_marginTop"> 8dp </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>